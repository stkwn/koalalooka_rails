<div class="container">
  <div class="row p-2">
    <div class="col-md-12">
      <h1>Users</h1>
      <p><%= pluralize(@users.size, "User") %> in the system</p>
    </div>
  </div>
  <div class="row align-items-center p-2" >
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Created</th>
        </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td>Created <%= time_ago_in_words(user.created_at) %></td>
        </tr>
      <% end %>
    </table>
</div>
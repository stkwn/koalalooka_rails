<div class="container">
  <div class="row align-items-center p-2" >
    <div class="col-md-4">
      <div class="card">
        <img src="<%= image_path("default_avatar") %>" class="card-img-top card-img-center" alt="User Avatar" style="height: 60px; width: 60px;">
        <div class="card-body">
          <h5 class="card-title mb-2"><%= @user.name %> </h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= mail_to(@user.email) %></h6>
          <div class="d-flex flex-row justify-content-around">
            <%= link_to "Update Account", edit_user_path(@user), class: "btn btn-primary"   %>
            <%= link_to "Delete Account", @user, 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>
<%= form_with(model: [@study_set, @learning_plan], local: true) do |f| %>
  <% if @learning_plan.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@learning_plan.errors.count, "error") %> prohibited this learning plan from being saved:</h2>
      <ul>
        <% @learning_plan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :daily_goal, 'Daily Items Goal', class: 'form-label' %>
        <%= f.number_field :daily_goal, class: 'form-control', min: 1, required: true %>
        <div class="form-text">How many items do you want to study each day?</div>
      </div>

      <div class="mb-3">
        <%= f.label :review_interval, 'Review Interval (Days)', class: 'form-label' %>
        <%= f.number_field :review_interval, class: 'form-control', min: 1, required: true %>
        <div class="form-text">How often do you want to review completed items?</div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :start_date, class: 'form-label' %>
        <%= f.date_field :start_date, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :end_date, class: 'form-label' %>
        <%= f.date_field :end_date, class: 'form-control' %>
        <div class="form-text">Optional - leave blank for no end date</div>
      </div>

      <div class="mb-3 form-check">
        <%= f.check_box :active, class: 'form-check-input' %>
        <%= f.label :active, class: 'form-check-label' %>
        <div class="form-text">Inactive plans won't show up in daily study sessions</div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= f.submit 'Save Learning Plan', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', study_set_path(@study_set), class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
